{
  "hosting": {
    "public": ".output/public",
    "ignore": ["firebase.json","**/node_modules/**"],
    "site": "my-nuxt-app-b8742",
    "cleanUrls": true,
    "rewrites": [{ "source": "**", "function": "server" }]
  },
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json",
    "port": 8080
  },
  "functions": [
    {
      "source": ".output/server",
      "runtime": "nodejs22",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local"
      ],
      "port": 5001
    }
  ],
  "emulators": {
    "functions": {
      "port": 5001,
      "host": "localhost"
    }
  },
  "storage": {
    "rules": "storage.rules"
  }
}
